        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Reverse Billing Configuration" >
                        <group string="Reverse Billing" cols="2" >
                            <field name="revbil_journal"/>
                            <field name="report_background_image_revbil1" no_label="1" widget="image" class="oe_avatar oe_left"/>
                            <field name="report_background_image_revbil1" no_label="1" widget="image" class="oe_avatar oe_left"/>
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
